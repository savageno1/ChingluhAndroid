<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dip">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:gravity="center"
			android:orientation="vertical">

			<ImageView
				android:layout_width="160dip"
				android:layout_height="120dip"
				android:src="@drawable/chingluh_logo_small" />
		</LinearLayout>

		<TextView
			android:id="@+id/textViewUserId"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:gravity="left"
			android:text="@string/TextView_UserId_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
			android:id="@+id/editTextUserId"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:ems="10"
			android:text="B471264">

			<requestFocus />
		</EditText>

		<TextView
			android:id="@+id/textViewPassword"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:gravity="left"
			android:text="@string/TextView_Password_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
			android:id="@+id/editTextPassword"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:ems="10"
			android:inputType="textPassword"
			android:text="981031" />

		<TextView
			android:id="@+id/textViewCompany"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:gravity="left"
			android:text="@string/TextView_Company_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Spinner
			android:id="@+id/spinnerCompany"
			android:layout_width="fill_parent"
			android:layout_height="50dip"
			android:layout_margin="3dip"
			android:paddingEnd="30dp"
			android:paddingStart="30dp" />

		<Button
			android:id="@+id/buttonQrLogin"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:background="@drawable/button_background"
			android:text="@string/Button_QrLogin_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Button
			android:id="@+id/buttonLogin"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:background="@drawable/button_background"
			android:text="@string/Button_Login_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />
		<Button
			android:id="@+id/buttonLocal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:background="@drawable/button_background"
			android:text="@string/Button_Local_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</LinearLayout>
</ScrollView>
