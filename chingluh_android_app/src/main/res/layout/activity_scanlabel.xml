<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="bottom"
	android:orientation="vertical"
	android:weightSum="1">

	<ListView
		android:id="@+id/listView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="3dip"
		android:layout_weight="1" />

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/buttonScanLabelOpen"
			style="@style/Chingluh_Style_Button_Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:layout_weight="1"
			android:enabled="false"
			android:text="@string/Button_Scanlabel_Open_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Button
			android:id="@+id/buttonScanLabelSet"
			style="@style/Chingluh_Style_Button_Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:layout_weight="1"
			android:text="@string/Button_Scanlabel_Set_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Button
			android:id="@+id/buttonScanLabelClose"
			style="@style/Chingluh_Style_Button_Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:layout_weight="1"
			android:enabled="false"
			android:text="@string/Button_Scanlabel_Close_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>

	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/buttonScanLabel6B"
			style="@style/Chingluh_Style_Button_Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:layout_weight="1"
			android:enabled="false"
			android:text="@string/Button_Scanlabel_6B_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Button
			android:id="@+id/buttonScanLabel6C"
			style="@style/Chingluh_Style_Button_Small"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:layout_weight="1"
			android:enabled="false"
			android:text="@string/Button_Scanlabel_6C_Text"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	</TableRow>
</LinearLayout>
