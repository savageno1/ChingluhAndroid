<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/Chingluh_Transparent" />
					<corners android:radius="5dip" />
					<size android:height="50dip" />
					<padding android:bottom="3dip" android:left="3dip" android:right="3dip" android:top="3dip" />
					<stroke android:width="3dip" android:color="@color/Chingluh_Blue"/>
				</shape>
			</item>
			<item>
				<bitmap android:gravity="bottom|right" android:src="@drawable/arrow" />
			</item>
		</layer-list>
	</item>
</selector>