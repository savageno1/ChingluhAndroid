<resources>
	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar" />
	<!--
		Theme customizations available in newer API levels can go in
		res/values-vXX/styles.xml, while customizations related to
	backward-compatibility can go here.
	-->
	<style name="FullScreenTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:buttonStyle">@style/Chingluh_Style_Button</item>
		<item name="android:textViewStyle">@style/Chingluh_Style_TextView</item>
		<item name="android:editTextStyle">@style/Chingluh_Style_EditText</item>
		<item name="android:spinnerStyle">@style/Chingluh_Style_Spinner</item>
		<item name="android:scrollViewStyle">@style/Chingluh_Style_ScrollView</item>
		<item name="android:listViewStyle">@style/Chingluh_Style_List</item>
	</style>

	<style name="Chingluh_Style_ScrollView">
		<item name="android:scrollbarStyle">insideOverlay</item>
	</style>

	<style name="Chingluh_Style_Spinner">
		<item name="android:background">@drawable/spinner_background</item>
		<item name="android:clickable">true</item>
		<item name="android:popupBackground">@color/Chingluh_Blue</item>
	</style>

	<style name="Chingluh_Style_Button">
		<item name="android:background">@drawable/button_background</item>
		<item name="android:textColor">@drawable/button_textcolor</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Chingluh_Style_Button_Small">
		<item name="android:background">@drawable/button_background_small</item>
		<item name="android:textColor">@drawable/button_textcolor</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="Chingluh_Style_TextView">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/Chingluh_Blue</item>
		<item name="android:padding">5dip</item>
	</style>

	<style name="Chingluh_Style_EditText">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/Chingluh_Blue</item>
		<item name="android:gravity">center_horizontal|left</item>
		<item name="android:layout_margin">10dip</item>
		<item name="android:background">@drawable/edittext_background</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="Chingluh_Style_List">
		<item name="android:background">@drawable/list_background</item>
		<item name="android:padding">5dip</item>
	</style>
</resources>